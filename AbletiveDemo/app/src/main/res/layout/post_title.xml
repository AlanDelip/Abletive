<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/thumb"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/title"
                style="@style/PostTitleTextStyle"
                android:layout_alignEnd="@+id/time"
                android:layout_toEndOf="@+id/thumb"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/author"
                style="@style/PostTitleTextStyle"
                android:layout_alignBottom="@+id/author_icon"
                android:layout_toEndOf="@+id/author_icon"
                android:text="Author" />

            <TextView
                android:id="@+id/time"
                style="@style/PostTitleTextStyle"
                android:layout_alignBottom="@+id/thumb"
                android:layout_alignEnd="@+id/views"
                android:text="2016-03-07 12:00:00" />

            <TextView
                android:id="@+id/views"
                style="@style/PostTitleTextStyle"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/author"
                android:text="231" />

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@+id/time"
                android:layout_toStartOf="@+id/time"
                android:src="@android:drawable/ic_menu_recent_history" />

            <ImageView
                android:id="@+id/view_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@id/views"
                android:layout_toStartOf="@+id/views"
                android:src="@android:drawable/ic_menu_view" />

            <ImageView
                android:id="@+id/author_icon"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@+id/thumb"
                android:layout_toEndOf="@+id/thumb"
                android:src="@drawable/author" />

            <TextView
                android:id="@+id/category"
                style="@style/PostTitleTextStyle"
                android:layout_alignBaseline="@+id/author"
                android:layout_alignBottom="@+id/author"
                android:layout_alignEnd="@+id/thumb"
                android:layout_alignStart="@+id/thumb"
                android:gravity="center"
                android:text="Category" />

            <ImageView
                android:id="@+id/comments_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/comments"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@+id/time_icon"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/comments"
                style="@style/PostTitleTextStyle"
                android:layout_alignBottom="@+id/view_icon"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@+id/comments_icon"
                android:text="231" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>