<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/domain_color"
    android:fitsSystemWindows="true"
    tools:context="abletive.presentation.activity.PersonalCardActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/menu_background"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/launch_logo" />

            <TextView
                android:id="@+id/user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="我的专属名片"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/cardview_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/domain_color">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/studio" />

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignStart="@+id/background"
                android:layout_alignTop="@+id/background"
                android:layout_margin="25dp"
                android:src="@drawable/favicon" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/user_avatar"
                android:text="@string/default_user_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/user_name"
                android:layout_below="@+id/user_name"
                android:text="30498"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/user_matrix"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/user_description"
                android:layout_marginTop="20dp"

                android:src="@drawable/launch_logo" />

            <TextView
                android:id="@+id/user_description"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_id"
                android:layout_toEndOf="@+id/user_avatar"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/chinese_long_text"
                android:textColor="@color/white" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
