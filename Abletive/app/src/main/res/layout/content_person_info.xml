<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="abletive.presentation.activity.PersonInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/public_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingStart="5dp"
                android:text="@string/public_info"
                android:textColor="@color/light_gray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/public_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/avatar_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/public_info"
                android:layout_marginTop="8dp"
                android:text="@string/avatar_text" />

            <abletive.presentation.widget.RoundImageView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/avatar_text"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/arrow1"
                android:src="@drawable/favicon" />

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/avatar"
                android:layout_alignEnd="@+id/avatar_text"
                android:layout_alignTop="@+id/avatar"
                android:src="@android:drawable/ic_media_play" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/gender_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/avatar"
                android:layout_marginTop="12dp"
                android:text="@string/gender" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/gender_text"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/gender_text"
                android:layout_toStartOf="@+id/avatar"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gender_text"
                android:layout_alignTop="@+id/gender_text"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/arrow2"
                android:gravity="center"
                android:text="@string/gender"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/gender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/nickname_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/gender"
                android:layout_marginTop="12dp"
                android:text="@string/displayname" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/nickname_text"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/nickname_text"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nickname_text"
                android:layout_alignTop="@+id/nickname_text"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/arrow2"
                android:gravity="center"
                android:text="@string/displayname"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/nickname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/personal_page_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nickname"
                android:layout_marginTop="12dp"
                android:text="@string/personal_page" />

            <ImageView
                android:id="@+id/arrow4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/personal_page_text"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/personal_page_text"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/personal_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/personal_page_text"
                android:layout_alignTop="@+id/personal_page_text"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/arrow4"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="@string/personal_page"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/personal_page"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/description_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/personal_page"
                android:layout_marginTop="12dp"
                android:text="@string/personal_description" />

            <ImageView
                android:id="@+id/arrow5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/description"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/description"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_text"
                android:layout_toStartOf="@+id/arrow5"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="10dp"
                android:text="@string/chinese_long_text"
                android:textColor="@color/light_gray"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/public_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/description"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/public_reminder"
                android:textColor="@color/light_gray" />

            <TextView
                android:id="@+id/community_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/public_reminder"
                android:layout_marginTop="20dp"
                android:paddingStart="5dp"
                android:text="@string/community_info"
                android:textColor="@color/light_gray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/community_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/weibo_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/community_info"
                android:layout_marginTop="12dp"
                android:text="@string/weibo_text" />

            <ImageView
                android:id="@+id/arrow6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/weibo_text"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/weibo_text"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/weibo_text"
                android:layout_alignTop="@+id/weibo_text"
                android:layout_toStartOf="@+id/arrow6"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="@string/weibo_text"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/weibo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/qq_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/weibo_text"
                android:layout_marginTop="12dp"
                android:text="@string/qq_text" />

            <ImageView
                android:id="@+id/arrow7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/qq_text"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/qq_text"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/qq_text"
                android:layout_alignTop="@+id/qq_text"
                android:layout_toStartOf="@+id/arrow7"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="@string/qq_text"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/qq_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/private_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/qq"
                android:layout_marginTop="30dp"
                android:paddingStart="5dp"
                android:text="@string/private_info"
                android:textColor="@color/light_gray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/private_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/login_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/private_info"
                android:layout_marginTop="12dp"
                android:text="@string/login_username" />

            <ImageView
                android:id="@+id/arrow8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/login_text"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/login_text"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/login_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/login_text"
                android:layout_alignTop="@+id/login_text"
                android:layout_toStartOf="@+id/arrow8"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="@string/login_username"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/login_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/email_text"
                style="@style/PersonalInfoTextStyle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_text"
                android:layout_marginTop="12dp"
                android:text="@string/email_text" />

            <ImageView
                android:id="@+id/arrow9"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/email_text"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/email_text"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/email_text"
                android:layout_alignTop="@+id/email_text"
                android:layout_toStartOf="@+id/arrow8"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="@string/email_text"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/private_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/see_only"
                android:textColor="@color/light_gray" />

            <TextView
                android:id="@+id/modify_password"
                style="@style/PersonalInfoTextStyle"
                android:layout_below="@+id/private_reminder"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/modify_password" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/private_reminder"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/modify_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/save"
                style="@style/PersonalInfoTextStyle"
                android:layout_below="@+id/modify_password"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/orange" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/modify_password"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/save"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <TextView
                android:id="@+id/sign_out"
                style="@style/PersonalInfoTextStyle"
                android:layout_below="@+id/save"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/sign_out"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/save"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sign_out"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="0.6"
                android:src="@color/light_gray" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
